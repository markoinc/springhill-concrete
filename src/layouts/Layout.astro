---
import { business } from '../data/business';

interface Props {
  title: string;
  description?: string;
  canonical?: string;
}

const { title, description = `Professional concrete contractors in Spring Hill, FL. Driveways, patios, slabs, stamped concrete. Licensed & insured. Call ${business.phone} for free estimate.`, canonical } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  {canonical && <link rel="canonical" href={canonical} />}
  
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="theme-color" content="#059669" />
  
  <slot name="head" />
  
  <style is:global>
    html { scroll-behavior: smooth; }
    body { font-family: 'Inter', system-ui, sans-serif; }
    .sticky-cta-mobile { display: none; }
    @media (max-width: 768px) {
      .sticky-cta-mobile { display: flex; }
      body { padding-bottom: 70px; }
    }
  </style>
</head>
<body class="bg-white text-gray-900">
  <!-- Top Bar -->
  <div class="bg-dark text-white py-2 text-sm hidden md:block">
    <div class="max-w-6xl mx-auto px-5 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
          {business.hoursDisplay}
        </span>
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
          Serving Hernando, Pasco & Citrus Counties
        </span>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-primary font-medium">★★★★★ 5.0 Rating</span>
        <a href={business.phoneLink} class="flex items-center gap-2 font-semibold hover:text-primary transition">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
          {business.phone}
        </a>
      </div>
    </div>
  </div>

  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-5 py-4 flex justify-between items-center">
      <a href="/" class="flex items-center gap-2">
        <img src="/images/springhill-logo.png" alt="Spring Hill Concrete Co. Logo" class="h-14 w-auto" />
      </a>
      
      <nav class="hidden lg:flex items-center gap-8">
        <a href="/" class="font-medium hover:text-primary transition">Home</a>
        <div class="relative group">
          <a href="/services/" class="font-medium hover:text-primary transition flex items-center gap-1">
            Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </a>
          <div class="absolute top-full left-0 bg-white shadow-lg rounded-lg py-2 w-48 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
            <a href="/services/concrete-driveways/" class="block px-4 py-2 hover:bg-gray-50 hover:text-primary">Concrete Driveways</a>
            <a href="/services/concrete-patios/" class="block px-4 py-2 hover:bg-gray-50 hover:text-primary">Concrete Patios</a>
            <a href="/services/concrete-slabs/" class="block px-4 py-2 hover:bg-gray-50 hover:text-primary">Concrete Slabs</a>
            <a href="/services/stamped-concrete/" class="block px-4 py-2 hover:bg-gray-50 hover:text-primary">Stamped Concrete</a>
          </div>
        </div>
        <a href="/locations/" class="font-medium hover:text-primary transition">Areas Served</a>
        <a href="/about/" class="font-medium hover:text-primary transition">About</a>
        <a href="/contact/" class="font-medium hover:text-primary transition">Contact</a>
      </nav>
      
      <div class="flex items-center gap-3">
        <a href={business.phoneLink} class="hidden md:flex items-center gap-2 bg-primary hover:bg-primary-700 text-white px-5 py-2.5 rounded-lg font-semibold transition">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
          {business.phone}
        </a>
        <a href={business.phoneLink} class="md:hidden bg-primary text-white p-2.5 rounded-lg">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
        </a>
      </div>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white pt-16 pb-8">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid md:grid-cols-4 gap-8 mb-12">
        <div class="md:col-span-2">
          <div class="flex items-center gap-2 mb-4">
            <img src="/images/springhill-logo.png" alt="Spring Hill Concrete Co. Logo" class="h-16 w-auto bg-white rounded-lg p-1" />
          </div>
          <p class="text-gray-400 mb-4 max-w-md">
            Professional concrete contractors serving Spring Hill, FL and surrounding areas since {business.foundedYear}. Quality workmanship, fair prices, and customer satisfaction guaranteed.
          </p>
          <div class="space-y-2 text-sm">
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
              <a href={business.phoneLink} class="hover:text-primary transition">{business.phone}</a>
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
              {business.address.full}
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
              {business.hoursDisplay}
            </p>
          </div>
        </div>
        
        <div>
          <h4 class="font-bold text-lg mb-4">Services</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/services/concrete-driveways/" class="hover:text-primary transition">Concrete Driveways</a></li>
            <li><a href="/services/concrete-patios/" class="hover:text-primary transition">Concrete Patios</a></li>
            <li><a href="/services/concrete-slabs/" class="hover:text-primary transition">Concrete Slabs</a></li>
            <li><a href="/services/stamped-concrete/" class="hover:text-primary transition">Stamped Concrete</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-bold text-lg mb-4">Service Areas</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href="/locations/spring-hill/" class="hover:text-primary transition">Spring Hill</a></li>
            <li><a href="/locations/brooksville/" class="hover:text-primary transition">Brooksville</a></li>
            <li><a href="/locations/hudson/" class="hover:text-primary transition">Hudson</a></li>
            <li><a href="/locations/new-port-richey/" class="hover:text-primary transition">New Port Richey</a></li>
            <li><a href="/locations/" class="hover:text-primary transition text-primary">View All Areas →</a></li>
          </ul>
        </div>
      </div>
      
      <div class="border-t border-gray-700 pt-8">
        <div class="flex flex-col items-center gap-4 mb-6">
          <p class="text-gray-400 text-sm">This Website Is Powered By</p>
          <img src="/images/aci-enterprise.webp" alt="ACI Enterprise LLC" class="h-8 w-auto" />
        </div>
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-400 text-sm">
          © {new Date().getFullYear()} {business.name}. All rights reserved. Licensed & Insured.
        </p>
        <div class="flex gap-6 text-sm text-gray-400">
          <a href="/privacy/" class="hover:text-white transition">Privacy Policy</a>
          <a href="/terms/" class="hover:text-white transition">Terms of Service</a>
        </div>
        </div>
      </div>
    </div>
  </footer>

  <!-- Sticky Mobile CTA -->
  <div class="sticky-cta-mobile fixed bottom-0 left-0 right-0 bg-primary shadow-lg border-t border-primary-700 z-50">
    <a href={business.phoneLink} class="flex items-center justify-center gap-3 py-4 text-white font-bold text-lg">
      <svg class="w-6 h-6 animate-pulse" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
      Call Now: {business.phone}
    </a>
  </div>
</body>
</html>
