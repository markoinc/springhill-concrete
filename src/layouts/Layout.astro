---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogType?: string;
}

const { title, description, canonical, ogType = 'website' } = Astro.props;
const siteUrl = 'https://concretespringhill.com';
const canonicalUrl = canonical || siteUrl + Astro.url.pathname;
const phone = '(727) 877-3099';
const phoneLink = 'tel:+17278773099';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>
  
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content={ogType}>
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:image" content={`${siteUrl}/images/og-image.jpg`}>
  <meta property="og:site_name" content="Spring Hill Concrete Co.">
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  
  <slot name="head" />
</head>
<body class="font-sans text-gray-800 bg-white overflow-x-hidden">
  <!-- Header -->
  <header class="bg-white py-3 shadow-sm sticky top-0 z-50 border-b border-gray-100">
    <div class="max-w-6xl mx-auto px-5 flex justify-between items-center">
      <a href="/" class="text-xl font-bold text-dark">
        <span class="text-primary">Spring Hill</span> Concrete Co.
      </a>
      
      <nav class="hidden md:flex items-center gap-7">
        <a href="/" class="text-gray-800 font-medium hover:text-primary transition">Home</a>
        <a href="/services/" class="text-gray-800 font-medium hover:text-primary transition">Services</a>
        <a href="/locations/" class="text-gray-800 font-medium hover:text-primary transition">Areas</a>
        <a href="/about/" class="text-gray-800 font-medium hover:text-primary transition">About</a>
        <a href="/contact/" class="text-gray-800 font-medium hover:text-primary transition">Contact</a>
      </nav>
      
      <a href={phoneLink} class="hidden md:flex items-center gap-2 bg-primary text-white px-4 py-2 rounded-md font-semibold hover:bg-primary-dark transition">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
        {phone}
      </a>
      
      <button id="mobile-menu-btn" class="md:hidden p-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden bg-white border-t px-5 py-4">
      <nav class="flex flex-col gap-4">
        <a href="/" class="text-gray-800 font-medium">Home</a>
        <a href="/services/" class="text-gray-800 font-medium">Services</a>
        <a href="/locations/" class="text-gray-800 font-medium">Areas</a>
        <a href="/about/" class="text-gray-800 font-medium">About</a>
        <a href="/contact/" class="text-gray-800 font-medium">Contact</a>
        <a href={phoneLink} class="bg-primary text-white px-4 py-3 rounded-md font-semibold text-center">{phone}</a>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-gray-900 text-white pt-16 pb-8">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid md:grid-cols-4 gap-10 mb-12">
        <div>
          <h4 class="text-primary font-semibold text-lg mb-4">Spring Hill Concrete Co.</h4>
          <p class="text-gray-400 text-sm mb-4">Professional concrete contractors serving Spring Hill, FL and surrounding areas. Quality workmanship guaranteed.</p>
        </div>
        
        <div>
          <h4 class="text-primary font-semibold mb-4">Services</h4>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li><a href="/services/concrete-driveways/" class="hover:text-primary transition">Concrete Driveways</a></li>
            <li><a href="/services/concrete-patios/" class="hover:text-primary transition">Concrete Patios</a></li>
            <li><a href="/services/concrete-slabs/" class="hover:text-primary transition">Concrete Slabs</a></li>
            <li><a href="/services/stamped-concrete/" class="hover:text-primary transition">Stamped Concrete</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-primary font-semibold mb-4">Service Areas</h4>
          <ul class="space-y-2 text-gray-400 text-sm">
            <li><a href="/locations/spring-hill/" class="hover:text-primary transition">Spring Hill</a></li>
            <li><a href="/locations/brooksville/" class="hover:text-primary transition">Brooksville</a></li>
            <li><a href="/locations/weeki-wachee/" class="hover:text-primary transition">Weeki Wachee</a></li>
            <li><a href="/locations/hudson/" class="hover:text-primary transition">Hudson</a></li>
            <li><a href="/locations/" class="hover:text-primary transition">View All Areas →</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-primary font-semibold mb-4">Contact</h4>
          <div class="space-y-3 text-gray-400 text-sm">
            <p class="flex items-start gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
              Spring Hill, FL 34608
            </p>
            <p class="flex items-center gap-2">
              <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
              <a href={phoneLink} class="hover:text-primary transition">{phone}</a>
            </p>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-800 pt-6 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
        <p>© {new Date().getFullYear()} Spring Hill Concrete Co. All rights reserved.</p>
        <div class="flex gap-6 mt-4 md:mt-0">
          <a href="/privacy/" class="hover:text-primary transition">Privacy Policy</a>
          <a href="/terms/" class="hover:text-primary transition">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Sticky Mobile CTA -->
  <div class="fixed bottom-0 left-0 right-0 bg-primary p-3 md:hidden z-50 shadow-lg">
    <a href={phoneLink} class="flex items-center justify-center gap-3 text-white text-lg font-bold">
      <svg class="w-6 h-6 animate-pulse" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
      Call Now: {phone}
    </a>
  </div>

  <script>
    document.getElementById('mobile-menu-btn')?.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.toggle('hidden');
    });
  </script>
  
  <style is:global>
    html { scroll-behavior: smooth; }
    body { padding-bottom: 60px; }
    @media (min-width: 768px) { body { padding-bottom: 0; } }
  </style>
</body>
</html>
