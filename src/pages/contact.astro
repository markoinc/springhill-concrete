---
import Layout from '../layouts/Layout.astro';
import { business } from '../data/business';

const title = `Contact Us | ${business.name}`;
const description = `Contact ${business.name} for a free concrete estimate in Spring Hill, FL. Call ${business.phone} or fill out our online form.`;
---

<Layout title={title} description={description}>
  <section class="bg-gradient-to-br from-dark to-dark-deep py-16 text-white text-center">
    <div class="max-w-4xl mx-auto px-5">
      <h1 class="text-4xl font-bold mb-4">Contact Us</h1>
      <p class="text-lg text-gray-300">Get in touch for a free estimate on your concrete project</p>
    </div>
  </section>

  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-5">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-bold mb-6">Get Your Free Estimate</h2>
          <p class="text-gray-600 mb-8">
            Fill out the form below and we'll get back to you within 24 hours. Or call us directly for immediate assistance.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
              </div>
              <div>
                <h3 class="font-bold">Phone</h3>
                <a href={business.phoneLink} class="text-primary text-lg font-semibold hover:underline">{business.phone}</a>
                <p class="text-sm text-gray-500">Call for immediate assistance</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path></svg>
              </div>
              <div>
                <h3 class="font-bold">Service Area</h3>
                <p class="text-gray-600">{business.address.full}</p>
                <p class="text-sm text-gray-500">Serving Hernando, Pasco & Citrus Counties</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path></svg>
              </div>
              <div>
                <h3 class="font-bold">Business Hours</h3>
                <p class="text-gray-600">{business.hoursDisplay}</p>
                <p class="text-sm text-gray-500">Emergency calls welcome</p>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-gray-50 rounded-xl p-8">
          <h3 class="text-xl font-bold mb-6">Request a Quote</h3>
          
          <iframe 
            src="https://api.leadconnectorhq.com/widget/survey/SFUsnVLQ7nUSZh84dBED" 
            style="width:100%;height:600px;border:none;"
            title="Request a Quote">
          </iframe>
          <script src="https://link.msgsndr.com/js/form_embed.js"></script>
        </div>
      </div>
    </div>
  </section>

</Layout>
