  <!-- Services Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-5">
      <div class="text-center mb-12">
        <span class="inline-block bg-primary/10 text-primary px-4 py-1 rounded-full text-sm font-medium mb-4">Our Services</span>
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Professional Concrete Services in Spring Hill</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          From new driveways to decorative stamped concrete, we offer comprehensive concrete solutions for residential and light commercial projects throughout Hernando and Pasco Counties.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {services.map(service => (
          <a href={`/services/${service.slug}/`} class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition duration-300 border border-gray-100">
            <div class="h-52 relative overflow-hidden bg-gray-200">
              <img 
                src={`/images/${service.slug === "concrete-driveways" ? "driveway-bighouse" : service.slug === "concrete-patios" ? "concrete-patio" : service.slug === "concrete-slabs" ? "concrete-slab" : "stamped-driveway"}.webp`} 
                alt={`${service.name} in Spring Hill FL`} 
                class="w-full h-full object-cover group-hover:scale-105 transition duration-500" 
                loading="lazy"
              />
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur px-3 py-1 rounded-full text-sm font-medium text-dark">
                {service.priceRange}
